#ifndef CONFIG_H_IN
#define CONFIG_H_IN

#include <QDebug>
#include <QtCore/QCoreApplication>
#include <QtCore/QDir>

inline bool isRunningInstalled()
{
    static bool installed = (QCoreApplication::applicationDirPath() == QDir(("@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@")).canonicalPath());
    return installed;
}

inline QString appDirectory()
{
    static const QByteArray SNAP_PATH("SNAP");

    if (qEnvironmentVariableIsSet(SNAP_PATH)) {
        return QString("%1/@APP_DIR@").arg(QString(qgetenv(SNAP_PATH)));
    } else if (isRunningInstalled()) {
        return QString("@APP_DIR@/ui");
    } else {
        return QString("@CMAKE_CURRENT_SOURCE_DIR@/app/ui");
    }
}

#endif // CONFIG_H_IN
